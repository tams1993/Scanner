<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tams1993.scanner.Main2Activity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Scanner"
        android:id="@+id/btnScanner"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Generator"
        android:id="@+id/btnGenerator"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/btnScanner"
        android:layout_alignStart="@+id/btnScanner" />


    <com.dd.CircularProgressButton
        android:id="@+id/btnWithText"
        android:layout_width="196dp"
        android:layout_height="64dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:cpb_textComplete="Complete"
        app:cpb_textError="Error"
        app:cpb_textIdle="Upload"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btnGenerator" />

</RelativeLayout>
